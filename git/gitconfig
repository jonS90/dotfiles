[core]
  excludesfile = /Users/smithers/.gitignore_global
  editor = git-vim
  pager = diff-highlight | less -+X -+F -S
  #                             ^ makes log and diff clear the screen when done
  #                             http://linuxtips.manki.in/2012/02/making-git-commands-clear-screen-when.html
[alias]
  ad = add
  br = branch
  fe = fetch
  cm = commit
  co = checkout
  lg = log
  df = diff
  sh = show
  cp = cherry-pick
  dfs = diff --staged
  dfc = diff --check
  dfsc = diff --staged --check
  incoming = log ..@{u}
  outgoing = log @{u}..
  tree = log --graph --oneline
  treename = log --graph --all
  website = ! python -mwebbrowser `git remote --verbose | grep fetch | sed -r 's/.*?\\/\\/(\\S+).git.*/http:\\/\\/\\1/'`
[push]
	default = simple
[user]
	name = Jon Smithers
	email = mail@jonsmithers.link
[credential]
	helper = cache --timeout 28800
[diff]
	compactionHeuristic = true
