[core]
  excludesfile = /Users/smithers/.gitignore_global
  editor = vim
  pager = less -+X -+F
  # ^ makes log and diff clear the screen when done
  #   http://linuxtips.manki.in/2012/02/making-git-commands-clear-screen-when.html
[alias]
  ad = add
  br = branch
  fe = fetch
  cm = commit
  co = checkout
  lg = log
  df = diff
  sh = show
  cp = cherry-pick
  dfs = diff --staged
  incoming = log ..@{u}
  outgoing = log @{u}..
  tree = log --graph --oneline --all
  treename = log --graph --all
[push]
  default = simple
[user]
	name = Jon Smithers
	email = jsmithe2@gmu.edu
[credential]
	helper = cache --timeout 28800
