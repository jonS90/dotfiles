[core]
  pager = less -+X -+F
  excludesfile = /Users/smithers/.gitignore_global
  editor = vim
  # makes log and diff clear the screen when done
  # http://linuxtips.manki.in/2012/02/making-git-commands-clear-screen-when.html
[alias]
  ad = add
  br = branch
  fe = fetch
  cm = commit
  co = checkout
  lg = log
  df = diff
  sh = show
  incoming = git log ..@{u}
  outgoing = log @{u}..
  tree = log --graph --oneline --all
  treename = log --graph --all
[push]
  default = simple
[user]
	name = Jon Smithers
	email = Jonathan.J.Smithers@leidos.com
