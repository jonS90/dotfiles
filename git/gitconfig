[core]
  excludesfile = /Users/smithers/.gitignore_global
  editor = nvim -c startinsert!
  pager = diff-highlight | less -+X -+F -S
  #                             ^ makes log and diff clear the screen when done
  #                             http://linuxtips.manki.in/2012/02/making-git-commands-clear-screen-when.html
  # pager = diff-highlight | nvim -R -c 'call Reader()' -
[alias]
  ad = add
  br = branch
  fe = fetch
  cm = commit
  co = checkout
  lg = log
  df = diff
  sh = show
  cp = cherry-pick
  dfs = diff --staged
  dfc = diff --check
  dfsc = diff --staged --check
  incoming = log ..@{u}
  outgoing = log @{u}..
  tree = log --graph --oneline
  treename = log --graph --all
  worddiff = diff --color-words='\\w+|.'
  worddiffstandard = diff --word-diff=color
  seewebsite = !             echo `git remote --verbose | grep origin | grep fetch | sed -E 's/origin.([^ ]+).git.*/\\1/'`
  # launch the website for the current repo
  website = ! python -mwebbrowser `git remote --verbose | grep origin | grep fetch | sed -E 's/origin.([^ ]+).git.*/\\1/'`
  # launch the di2e jira ticket for the current branch
  dj = ! python -mwebbrowser `git rev-parse --abbrev-ref HEAD | sed -E 's/.*[^0-9]([0-9]+).*/\\1/' | sed -E 's/(.*)/https:\\/\\/jira.di2e.net\\/browse\\/UC-\\1/'`
[push]
	default = simple
[user]
	name = Jon Smithers
	email = mail@jonsmithers.link
[credential]
	helper = cache --timeout 28800
[diff]
	compactionHeuristic = true
